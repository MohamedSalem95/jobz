<p class="text-muted font-weight-bold">
	<%= pluralize(user.tasks.length, 'project') %>
</p>

<% user.tasks.each do |task| %>
	<%= link_to task.title.capitalize, task_path(task) %>
	<p> <%= truncate(task.description, length: 50, omission: '...') %> </p>
	<small class="text-muted"> Project was done <b> <%= time_ago_in_words(task.created_at) %> ago </b> </small>
	<hr>
<% end %>

