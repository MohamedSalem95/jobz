<h4> Create New Previous Work </h4>

<div class="row">
	<div class="col col-6">
		<%= form_with model: @task, local: true do |f| %>
			
			<div class="form-group">
				<%= f.label :title, 'job name*' %>
				<%= f.text_field :title, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label :description, 'job description*' %>
				<%= f.text_area :description, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label :url, 'Site url(optional)' %>
				<%= f.text_field :url, class: 'form-control' %>
				<small class="text-muted">
					in case of web sites, or mobile apps you can paste url here
				</small>
			</div>

			<div class="form-group">
				<%= f.label :location, 'Job Location(optional)' %>
				<%= f.text_field :location, class: 'form-control' %>
			</div>

			<%= f.submit 'Save', class: 'btn btn-success' %>

		<% end %>

	</div>

	<div class="col col-6">
		<%= image_tag 'https://www.carneydirect.com/wp-content/uploads/2018/06/data-progammer-team-working.jpg', class: 'img-fluid' %>

	</div>
</div>