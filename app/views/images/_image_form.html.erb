<%= form_with model: [task, image], local: true do |form|  %>

	<div class="form-group">
		<%= form.label :file, 'Image*' %>
		<%= form.file_field :file, class: 'form-control'  %>
	</div>

	<div class="form-group">
		<%= form.label :caption, 'Caption(optinal)' %>
		<%= form.text_area :caption, class: 'form-control'  %>
	</div>

	<%= form.submit 'Save Image', class: 'btn btn-success'  %>



<% end %>