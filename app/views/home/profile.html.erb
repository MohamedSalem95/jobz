<div class="row">
	<div class="col col-3">
		<% if !current_user.image.profile.url.nil? %>
			<%= image_tag current_user.image.profile.url, class: 'img-thumbnail' %>
		<% end %>
		<br>
		<br>
		<h5> <%= current_user.name.capitalize %></h5>
	</div>


	<div class="col col-9">
		<%= link_to 'Create Previous Work', new_task_path, class: 'btn btn-outline-success mr-1' %>
		<%= link_to 'Create New Post', new_post_path, class: 'btn btn-outline-success mr-1' %>
		<%= link_to 'View Posts', posts_path, class: 'btn btn-outline-success mr-1' %>
		<p></p>
		<%= render 'tasks/list', user: current_user %>
</div>

</div>